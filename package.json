{
    "name": "@irvinebroque/http-rfc-utils",
    "version": "0.2.0",
    "description": "RFC-compliant HTTP utilities for APIs (9110, 8288, 7231, 9457, 9111)",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "check:structure": "node scripts/check-structure.mjs",
        "test": "tsx --test test/*.test.ts",
        "test:watch": "tsx --test --watch test/*.test.ts",
        "docs:api": "typedoc --options typedoc.json && node scripts/postprocess-typedoc.mjs",
        "docs": "pnpm run docs:api",
        "bench": "tsx bench/perf.ts",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "pnpm run build",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "changeset publish"
    },
    "keywords": [
        "http",
        "rfc",
        "etag",
        "cors",
        "cache-control",
        "content-negotiation",
        "link-header",
        "problem-details",
        "conditional-requests",
        "rfc9110",
        "rfc8288",
        "rfc9457"
    ],
    "author": "Brendan Irvine-Broque",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/irvinebroque/http-rfc-utils.git"
    },
    "homepage": "https://github.com/irvinebroque/http-rfc-utils#readme",
    "bugs": {
        "url": "https://github.com/irvinebroque/http-rfc-utils/issues"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "packageManager": "pnpm@10.26.1",
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.2",
        "@changesets/cli": "^2.29.8",
        "@types/node": "^22.10.2",
        "typedoc": "^0.28.16",
        "typedoc-plugin-frontmatter": "^1.3.1",
        "typedoc-plugin-markdown": "^4.9.0",
        "tsx": "^4.21.0",
        "typescript": "^5.7.0"
    }
}
